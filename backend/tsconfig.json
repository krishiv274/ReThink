{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "moduleResolution": "Node",

    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "sourceMap": true
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
